<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.crm.search.infra.mybatis.mapper.TestMyBatisMapper">
    <select id="selectJdbcUrl" resultType="string">
        SELECT VALUE
        FROM INFORMATION_SCHEMA.SETTINGS
        WHERE NAME = 'URL'
    </select>

    <insert id="insertName">
        INSERT INTO MYBATIS_TEST (NAME) VALUES (#{name})
    </insert>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM MYBATIS_TEST
    </select>

</mapper>